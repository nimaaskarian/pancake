#!/usr/bin/env bash
[ $# -lt 1 ]  && {
  >&2 echo "Usage: pancake start MDFILE OPTFILE[./pandoc-opts]"
  exit 1
}

opts=${2:-./pandoc-opts}
PID=""
while true; do
  ! [ -f "$opts" ] && opts=""
  inotifywait -e modify "$1" "$opts"
  [ "$PID" ] && kill "$PID" > /dev/null 2>&1
  pandoc "$1" $(< $opts) -o "${1%.*}.pdf" &
  PID=$!
done
